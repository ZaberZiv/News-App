<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="InFixAppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="elevation">0dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- Toolbar -->
    <style name="TextAppearance.inFix.Title_Toolbar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Text Fonts -->
    <style name="TextBaseFont" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif</item>
    </style>


    <!-- Text Colors -->
    <style name="TextBaseFont.PrimaryColor" >
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextBaseFont.WhiteColor" >
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextBaseFont.SecondaryColor" >
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextBaseFont.Teal_200" >
        <item name="android:textColor">@color/teal_200</item>
    </style>

    <!-- Text Sizes -->

    <!-- Title -->
    <style name="TextBaseFont.PrimaryColor.Title" >
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="TextBaseFont.WhiteColor.Title" >
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <!-- Subtitle -->
    <style name="TextBaseFont.PrimaryColor.Subtitle">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="TextBaseFont.SecondaryColor.Subtitle">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="TextBaseFont.SecondaryColor.Subtitle_small">
        <item name="android:textSize">@dimen/subtitle_text_size_small</item>
    </style>

    <style name="TextBaseFont.Teal_200.Subtitle">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

</resources>